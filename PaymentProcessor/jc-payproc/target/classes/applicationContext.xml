<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Prototype payment methods -->
    <bean id="creditCardPayment" class="com.revature.ecommerce.payment.CreditCardPaymentService" scope="prototype"/>
    <bean id="paypalPayment" class="com.revature.ecommerce.payment.PaypalPaymentService" scope="prototype"/>

    <!-- Order service, wired to CreditCard by default -->
    <bean id="orderService" class="com.revature.ecommerce.order.OrderService" scope="prototype">
        <property name="paymentService" ref="creditCardPayment"/>
    </bean>

</beans>