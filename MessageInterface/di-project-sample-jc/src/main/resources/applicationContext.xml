<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Example bean definition -->
    <!--
    <bean id="myBean" class="com.example.MyClass">
     <property name="propertyName" value="propertyValue"/>
    </bean>
    -->
     <!-- Define EmailService bean -->
    <bean id="emailService" class="com.revature.justinchen.di.EmailService" />

    <!-- Define SMSService bean -->
    <bean id="smsService" class="com.revature.justinchen.di.SMSService" />

    <!-- Define MessageClient bean with init/destroy -->
    <bean id="messageClient" class="com.revature.justinchen.di.MessageClient"
          init-method="init" destroy-method="cleanup">
        <property name="service" ref="emailService"/>
    </bean>
</beans>